<!DOCTYPE html>
<html>
  <head>
    <title>Auth</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash.any? %>
      
      <% flash.each do |type, msg| %>
        <div class="flash-msg"><%= msg %></div>
      <% end %>
      
    <% end %>

    <div class="session-info">
      <% if @current_user %>
        <p><%= @current_user.username %> is logged in</p>
        <p><%= link_to 'Logout', logout_path, method: :delete %></p>
      <% else %>
        <p><%= link_to 'Sign Up!', new_user_path %></p>
        <p><%= link_to 'Sign In!', login_path %></p>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>

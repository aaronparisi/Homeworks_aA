<h1>A Cat</h1>

<table>

  <thead>
    <tr>
      <th colspan="2">A Cat</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>Name</td>
      <td><%= @cat.name %></td>
    </tr>

    <tr>
      <td>Age</td>
      <td><%= @cat.age %></td>
    </tr>

    <tr>
      <td>Sex</td>
      <td><%= @cat.sex %></td>
    </tr>

    <tr>
      <td>Color</td>
      <td><%= @cat.color %></td>
    </tr>

    <tr>
      <td>Description</td>
      <td><%= @cat.description %></td>
    </tr>
  </tbody>

</table>

<%= link_to 'Modify', edit_cat_path(@cat) %> | <%= link_to 'Murder', cat_path, method: :delete %> | <%= link_to 'All Cats', cats_url %>
<%= form_with model: cat do |f| %>
  <div class="fields">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="fields">
    <%= f.label :sex %><br>
    <%= f.radio_button :sex, 'M' %> <%= f.label :sex_M, 'M' %>
    <%= f.radio_button :sex, 'F' %> <%= f.label :sex_F, 'F' %>
  </div>

  <div class="fields">
    <%= f.label :birth_date %><br>
    <%= f.date_field :birth_date, max: Date.today %>
  </div>

  <div class="fields">
    <%= f.label :color %><br>
    <%= f.select :color, Cat::CAT_COLORS.map { |c| [c, c] }, prompt: "-- Please Select --" %>
  </div>

  <div class="fields">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit "Create Cat" %>
  </div>
<% end %>
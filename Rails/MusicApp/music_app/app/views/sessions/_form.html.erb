<%= form_with do %>
  <fieldset>

    <div class="fields">
      <%= label_tag :username %>
      <%= text_field_tag :username %>
    </div>

    <div class="fields">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <div class="actions">
      <%= submit_tag "Login" %>
    </div>

  </fieldset>
<% end %>
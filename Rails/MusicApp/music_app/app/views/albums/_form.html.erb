<div class="app-form" id="signup-form">
  <%= form_with model: user, local: true do |f| %>
    <%= render_errors(user) %>

    <%= f.hidden_field :band_id, band_id %>

    <div class="fields">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="actions button">
      <%= f.submit "Add Album", class: "button", style: 'font-size: 18px; font-weight: 100' %>
    </div>
    
  <% end %>
</div>
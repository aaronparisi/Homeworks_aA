<h2 class="body-content-main-header"><%= @album.name %></h2>

<h3 class="body-content-sub-header">Tracks</h3>

<ol class="content-list">
  
  <% @tracks.each do |track| %>
    <li>
      <div class="list-info"><%= track.name %></div>
      <div class="list-links">
        <div class="list-link" id="delete-button"><%= link_to 'Delete', track_path(track), method: :delete, class: "tiny-button" %></div>
        <div class="list-links" id="like-button"><%= link_to 'Like', track_like_path(track), method: :post, class: "tiny-button" %></div>
      </div>
    </li>
  <% end %>
  <% if current_user.in_the_band?(@album)%>
    <%= render 'tracks/form', track: Track.new, album: @album %>
  <% end %>
</ol>

<h3 class="body-content-links-header">Links</h3>
<div class="content-grid resource-links" id="album-links">
  <%= link_to 'Like Album', album_like_path(@album), method: 'post', class: "button" %>
  <%= link_to "Add Track", new_album_track_path(@album), class: "button" %>
  <%= link_to "Delete Album", album_path(@album), class: "button", method: 'delete' %>
  <%= link_to "Back to #{@album.band.name}", band_path(@album.band), class: "button" %>
</div>
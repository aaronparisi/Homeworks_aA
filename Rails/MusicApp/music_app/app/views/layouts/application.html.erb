<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_logged_in? %>
      <div><%= link_to @current_user.username, user_path(@current_user) %> is logged in</div>
      <div><%= link_to 'Logout', logout_path, method: :delete %></div>
    <% else %>
      <div><%= link_to 'Sign up', new_user_path %></div>
      <div><%= link_to 'Login', login_path %></div>
    <% end %>

    <% flash.each do |type, msg| %>
      <div><%= msg %></div>
    <% end %>

    <%= yield %>
  </body>
</html>

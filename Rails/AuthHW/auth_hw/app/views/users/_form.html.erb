<%= form_with(model: user, local: true) do |f| %>
  <% if user.errors.any? %>
    <ul>
      <% user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>  
  <% end %>

  <div class="fields">
    <%= f.label :username %>
    <%= f.text_field :username, placeholder: "John Doe" %>
  </div>

  <div class="fields">
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "password123" %>
  </div>

  <div class="fields">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, placeholder: "password123" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
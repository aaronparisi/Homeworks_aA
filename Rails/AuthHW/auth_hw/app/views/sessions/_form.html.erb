<%= form_tag '/login' do %>
  <fieldset>  

    <div class="field">
      <%= label_tag :username, "Name:" %>
      <%= text_field_tag :username, params[:name] %>
    </div>

    <div class="field">
      <%= label_tag :password, "Password" %>
      <%= password_field_tag :password %>
    </div>

    <div class="actions">
      <%= submit_tag "Login" %>
    </div>
  </fieldset>
<% end %>